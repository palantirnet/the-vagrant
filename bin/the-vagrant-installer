#!/usr/bin/env ruby
#
# Install script.
#

require 'Pathname'
require_relative '../src/TheVagrant.rb'
require_relative '../src/Wizard.rb'

# This script should only be run from the project root where the-vagrant is being installed.
if Pathname.new(Dir.pwd).relative_path_from(Pathname.new("#{__dir__}/../../../../")).to_s != '.'
  puts "Please run this command from your project root."
  exit
end

# Location of the project directory
$the_vagrant_project_dir = Dir.pwd

# Location of the-vagrant's config file
$the_vagrant_config = '#{$the_vagrant_project_dir}/.the-vagrant.yml'

the_vagrant = TheVagrant.new($the_vagrant_project_dir)
Wizard::init(the_vagrant)
